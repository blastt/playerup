@model Market.Web.Models.UpdateEmailViewModel

<h2>Изменить почту</h2>

@using (Html.BeginForm("UpdateEmail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
       
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
       
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewEmail, new { @class = "control-label" })
        
            @Html.TextBoxFor(m => m.NewEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewEmail, "", new { @class = "text-danger" })
        
    </div>
    <div class="form-group">
        
            <input type="submit" class="btn btn-submit" value="Изменить почту" />
     
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

