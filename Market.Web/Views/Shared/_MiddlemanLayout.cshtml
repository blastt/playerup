<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container">
        <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
            <div class="container">
                <a href="@Url.Action("Buy","Offer")" class="navbar-brand">
                    <img width="140" src="~/Content/Images/logo.svg" />
                </a>
                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse left-bar" id="navbarResponsive">
                    <ul class="navbar-nav" id="left-bar">
                        <li class="nav-item">
                            @Html.ActionLink("Заказы ожидающие гаранта", "OrderList", "Middleman", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Мои заказы", "MyOrderList", "Middleman", null, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()

    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
