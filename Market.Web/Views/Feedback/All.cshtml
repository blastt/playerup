@using Market.Model.Models
@model Market.Web.ViewModels.FeedbackListViewModel
@{
    /**/

    ViewBag.Title = "All";

}

<div class="row">
    <div class="col-lg-12">

        <div class="page-info">
            <h2>Заказы</h2>
            <p class="lead">Здесь отображается информация по отзывам</p>
        </div>



        @{Html.RenderAction("AccountMenu", "Account"); }
        <div class="account-container">
            @{Html.RenderPartial("_AccountFeedbacksMenu", Model); }
            <div class="form-inline form-offer-filter">
                <h3 class="mb-0 text-gray text-300">
                    Все отзывы:
                </h3>
            </div>
            <table class="table table-white text-center">
                <tr>
                    <th>Отзыв</th>
                    <th></th>
                    <th>Кто оставил</th>
                    <th>Дата</th>
                </tr>
                @foreach (var feedback in Model.Feedbacks)
                {


                    <tr class="text-center">
                        <td class="feedback-grade">
                            @if (feedback.Grade == Emotions.Good)
                            {
                                <i class="info-rate-line icon-smile-pos-green icon-info-rate" style="height:24px"></i>
                            }
                            else
                            {
                                <i class="info-rate-line icon-smile-neg-gray icon-info-rate" style="height:24px"></i>
                            }
                        </td>
                        <td class="feedback-comment">@feedback.Comment</td>
                        <td class="feedback-sender">@feedback.SenderName</td>
                        <td class="feedback-date">@feedback.DateLeft.Value.ToShortDateString()</td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>


