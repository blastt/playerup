@model Market.Web.ViewModels.OfferListViewModel

@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-light">
    <tr>
        <th>
            Игра
        </th>
        <th>
            Заголовок
        </th>
        <th>
            Пользователь
        </th>
        <th>
            Статус
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>
    @foreach (var offer in Model.Offers)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => offer.Game.Name)
        </td>
        <td>
            @Html.DisplayFor(m => offer.Header)
        </td>
        <td>
            @Html.DisplayFor(m => offer.UserName)
        </td>
        <td>
            @Html.DisplayFor(m => offer.DateCreated)
        </td>
        <td>
            @Html.DisplayFor(m => offer.Price)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteOffer", new { id = offer.Id })
        </td>
    </tr>
    }
</table>

