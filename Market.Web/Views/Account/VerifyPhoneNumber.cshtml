@model Market.Web.Models.VerifyPhoneNumberViewModel
@{
    ViewBag.Title = "Проверка номера телефона";
}
<div class="row">
    <div class="col-lg-5" style="float: none; margin: 0 auto">
        <div class="phone-confirm-form text-center">
            <h3 class=" text-gray text-700 mb-4">Введите проверочный код</h3>
            @using (Html.BeginForm("VerifyPhoneNumber", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("phoneNumber", @Model.PhoneNumber)

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", placeholder = "Код" })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-submit" value="Подтвердить" />
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
