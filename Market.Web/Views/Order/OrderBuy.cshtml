@model Market.Web.ViewModels.OrderListViewModel
@{
    ViewBag.Title = "All";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="page-info">
                <h2>Заказы</h2>
                <p class="lead">Здесь отображается информация по заказам</p>
            </div>



            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-offer-container">
                @{Html.RenderPartial("_AccountOrdersMenu"); }
                <table class="table table-hover">
                    <tr>
                        <th>Предложение</th>
                        <th>Продавец</th>
                        <th>Цена</th>
                        <th>Статус заказа</th>
                        <th></th>
                    </tr>
                    @foreach (var order in Model.Orders)
                    {
                        var cls = "";
                        if (!order.BuyerChecked)
                        {
                            cls = "warning-row";
                        }
                        <tr class="@cls">
                            <td>@order.OfferHeader</td>
                            <td>@order.SellerName</td>
                            <td>@order.OfferPrice</td>
                            <td>@order.OrderStatus</td>
                            <td>@Html.ActionLink("Детали", "BuyDetails", "Order", new { orderId = order.Id }, null)</td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>
