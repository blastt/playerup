@model IEnumerable<Market.Web.ViewModels.FilterViewModel>

@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-light">
    <tr>
        <th>
            Название
        </th>
        <th>
            Игра
        </th>

        <th></th>
    </tr>
    @foreach (var filter in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => filter.Name)
        </td>
        <td>
            @Html.DisplayFor(m => filter.GameValue)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteFilter", new { id = filter.Id })
            @Html.ActionLink("Редактировать", "EditFilter", new { id = filter.Id })
        </td>
    </tr>
    }
</table>

@Html.ActionLink("Добавить фильтр", "CreateFilter", null, null)

