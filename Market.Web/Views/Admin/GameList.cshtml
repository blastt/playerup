@model IEnumerable<Market.Web.ViewModels.GameViewModel>

@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-light">
    <tr>
        <th>
            Название
        </th>
        <th>
            Лого
        </th>
        <th></th>
    </tr>
    @foreach (var game in Model)
    {
        var path = "../../Content/Images/" + game.Value + "/Icons/" + game.Image;
        <tr>
            <td>
                @Html.DisplayFor(m => game.Name)
            </td>
            <td>
                <img src="@path" width="40" />
            </td>
            <td>
                
                @Html.ActionLink("Удалить", "DeleteOffer", new { id = game.Id}) 
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Добавить игру","CreateGame", null, null)

