@model Market.Web.ViewModels.AccountInfoViewModel

@{
    ViewBag.Title = "ProvideData";
}


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @using (Html.BeginForm("ProvideData", "Checkout"))
            {

                @Html.HiddenFor(m => m.ModeratorId)
                @Html.HiddenFor(m => m.BuyerId)
                @Html.HiddenFor(m => m.SellerId)
                <div class="form-group">
                    <label class="control-label">Логин Steam</label>
                    <input name="SteamLogin" type="text" value="@Model.SteamLogin" class="form-control" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label class="control-label">Пароль Steam</label>
                    @Html.TextBoxFor(m => m.SteamPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Подтверждение пароля Steam</label>
                    @Html.TextBoxFor(m => m.ConfirmSteamPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Email Steam</label>
                    @Html.TextBoxFor(m => m.SteamEmail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Дополнительная информация Steam</label>
                    @Html.TextBoxFor(m => m.AdditionalInformation, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" />
                </div>
            }
        </div>
    </div>

</div>
