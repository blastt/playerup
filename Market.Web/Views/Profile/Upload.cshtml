@model Market.Web.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "Загрузить аватар";
}
<div class="row">
    <div class="col-lg-5 auth-box" style="float: none; margin: 0 auto">
        <div class="auth-body text-center">
            <h3 class="text-gray text-700 mb-4">Загрузить аватар</h3>
            @using (Html.BeginForm("Upload", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <div class="form-group">
                        <div style="position:relative;">
                            <ul class="ul-avatars">
                                <li><img id="blah" src="@Model.Avatar96Path" alt="your image" width="96" height="96" />
                                <br />
                                <span class="font-size-12">96px</span>
                                </li>
                                <li>
                                    <img id="blah" src="@Model.Avatar48Path" alt="your image" width="48" height="48" />
                                    <br />
                                    <span class="font-size-12">48px</span>
                                </li>

                                <li>
                                    <img id="blah" src="@Model.Avatar32Path" alt="your image" width="32" height="32" />
                                    <br />
                                    <span class="font-size-12">32px</span>
                                </li>
                            </ul>                                                      
                            <a href='javascript:;' >
                                <input type="file" name="Image"  class="btn btn-details mt-3" onchange='readURL(this)'>
                            </a>

                        </div>

                    </div>
                    <div class="panel-footer">
                        <input type="submit" value="Сохранить" class="btn btn-submit" />
                    </div>
                </fieldset>
            }
        </div>
    </div>

</div>

@section scripts
{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('*[id*=blah]:visible').each(function () {
                    
                        $(this).attr('src', e.target.result);
                    }) 
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        function DrowImage() {
            $('#upload-file-info').text($(this).val());
        }
    </script>
}