@model Market.Web.ViewModels.FeedbackListViewModel
@{
    ViewBag.Title = "All";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="page-info">
                <h2>Заказы</h2>
                <p class="lead">Здесь отображается информация по отзывам</p>
            </div>



            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-container">
                @{Html.RenderPartial("_AccountFeedbacksMenu", Model); }
                <table class="table table-hover">
                    <tr>
                        <th>Отзыв</th>
                        <th></th>
                        <th>Кто оставил</th>
                        <th>Дата</th>
                    </tr>
                    @foreach (var feedback in Model.Feedbacks)
                    {
                        

                        <tr>
                            <td>@feedback.Grade</td>
                            <td>@feedback.Comment</td>
                            <td>@feedback.SenderName</td>
                            <td>@feedback.DateLeft</td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>

