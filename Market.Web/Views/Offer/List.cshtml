@using System.Globalization
@using Market.Web.ViewModels
@model OfferListViewModel



<div class="row">
    <div class="col-lg-12">

        <div class="game-filter" id="game-filter">


            @foreach (var g in Model.Games)
            {
                var url = "../../Content/Images/" + g.Value + "/Icons/" + g.Image;
                <div class="game-filter-item" data-game="@g.Value" data-url="@Url.Action("List", "Offer", new { game = g.Value })">
                    <div onclick="ChangeGame('@g.Value')"><img src="@url" style="width:40px" alt="Alternate Text" title="@g.Name" /></div>



                </div>

            }

        </div>
        
    </div>
    <div class="col-lg-12">
        @{var game = Model.Game == null ? "Все" : Model.Game.Name;}
        <span class="game-title">Игра &#10148 <span style="font-weight:700">@game</span> </span>
        @Html.ActionLink("Продать аккаунт", "Create", null, new { @class = "btn btn-link-sell" })
    </div>
</div>
<div class="row" id="lll">







    <div class="col-lg-12">
        <div class="offer-list">

        </div>
        @Html.Partial("_OfferList", Model)
    </div>


    <input type="hidden" name="page" id="page" value="1" />


</div>









