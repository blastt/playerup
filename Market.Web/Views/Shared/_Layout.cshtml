@using Microsoft.AspNet.Identity
@using Market.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <link rel="icon" href="~/Content/Images/____________1_Fso_icon.ico" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&amp;subset=cyrillic" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/range-slider.css">
    <link rel="stylesheet" href="~/Content/jquery-ui.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | @Request.Url.Host</title>
    <meta name="description" content="@ViewBag.Description">
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")




</head>
<body>

    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
        <div class="container">
            <a href="@Url.Action("Buy","Offer")" class="navbar-brand">
                <img alt="Лого" width="140" src="~/Content/Images/logo.svg" />
            </a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse left-bar" id="navbarResponsive">
                <ul class="navbar-nav" id="left-bar">
                    <li class="nav-item @Html.IsSelected(actions: "buy", controllers: "offer")">
                        @Html.ActionLink("Купить", "Buy", "Offer", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @Html.IsSelected(actions: "create", controllers: "offer")">
                        @Html.ActionLink("Продать", "Create", "Offer", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @Html.IsSelected(actions: "contactus", controllers: "help")">
                        @Html.ActionLink("Поддержка", "ContactUs", "Help", null, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item @Html.IsSelected(actions: "faq", controllers: "help")">
                        @Html.ActionLink("FAQ", "Faq", "Help", null, new { @class = "nav-link" })
                    </li>
                </ul>





                @Html.Partial("_LoginPartial")

            </div>

        </div>

    </div>
    <div class="container pb-5">
        
        @RenderBody()
    </div>
    <div class="container">
        <footer class="card-footer">
            <div class="text-center">
                <div class="row">
                    <div class="col-md-3 text-left">
                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <span>Мы в социальных сетях</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <ul class="ul-social">
                                    <li>
                                        <a href="">
                                            <img alt="vk" width="35" src="~/Content/Images/vk.svg" />
                                        </a>
                                    </li>
                                    <li>
                                        <a href="">
                                            <img alt="facebook" width="35" src="~/Content/Images/facebook.svg" />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-6 text-center">
                        <p class="mb-3">Все права принадлежат © 2018 playerup.ru</p>
                        <ul class="ul-footer">
                            <li>@Html.ActionLink("Купить", "Buy", "Offer")</li>
                            <li>@Html.ActionLink("Продать", "Create", "Offer")</li>
                            <li>@Html.ActionLink("Связаться", "Contactus", "Help")</li>
                            <li>@Html.ActionLink("FAQ", "Faq", "Help")</li>
                            <li>@Html.ActionLink("Оферта", "PublicOffer", "Help")</li>
                        </ul>
                    </div>
                    <div class="col-md-3 text-right">
                        <img alt="Почта" width="35" class="mr-1" src="~/Content/Images/mail.svg" />
                        <span>
                            support@playerup.ru
                        </span>
                    </div>
                </div>

            </div>

        </footer>
    </div>



    @Scripts.Render("~/bundles/jquery")


    <script src="~/Scripts/Main.js"></script>

    <script src="~/Scripts/jquery.signalR-2.2.3.min.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/signalr/hubs"></script>
    @Scripts.Render("~/bundles/signalr-messages")
    @RenderSection("scripts", required: false)
</body>
</html>
