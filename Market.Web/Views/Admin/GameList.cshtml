@model IEnumerable<Market.Web.ViewModels.GameViewModel>

@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-light">
    <tr>
        <th>
            Название
        </th>
        <th>
            Лого
        </th>
        <th></th>
    </tr>
    @foreach (var game in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => game.Name)
            </td>
            <td>
                <img src="@game.ImagePath" width="40" />
            </td>
            <td>

                @Html.ActionLink("Удалить", "DeleteGame", new { id = game.Id }) |
                @Html.ActionLink("Редактировать", "EditGame", new { id = game.Id })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Добавить игру","CreateGame", null, null)

