
@{
    ViewBag.Title = "AccountMenu";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <ul class="account-list" id="account-list">
            <li class="account-menu-item @Html.IsSelected(actions: "Inbox,Unread,Details", controllers: "Message,Dialog")">@Html.ActionLink("Cообщения", "Inbox", "Message")</li>
            <li class="account-menu-item @Html.IsSelected(actions: "Active,Inactive,Closed", controllers: "Offer")">@Html.ActionLink("Предложения", "Active", "Offer")</li>
            <li class="account-menu-item @Html.IsSelected(actions: "OrderBuy,OrderSell,BuyDetails,SellDetails", controllers: "Order")">@Html.ActionLink("Заказы", "OrderBuy", "Order")</li>
            <li class="account-menu-item @Html.IsSelected(actions: "All,Positive,Negative", controllers: "Feedback")">@Html.ActionLink("Отзывы", "All", "Feedback")</li>
            <li class="account-menu-item @Html.IsSelected(actions: "Settings", controllers: "Account")">@Html.ActionLink("Настройки", "Settings", "Account")</li>
        </ul>
    </div>
</div>




