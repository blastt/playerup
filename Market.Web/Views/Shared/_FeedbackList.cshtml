@using System.Globalization
@using Microsoft.AspNet.Identity
@using Market.Model.Models
@using Market.Web.Helpers
@model Market.Web.ViewModels.FeedbackListViewModel

<div class="col-lg-12">
    <h4>Отзывы: <span class="feed-count-label">@Model.PageInfo.TotalItems</span></h4>
</div>

@foreach (var feedback in Model.Feedbacks)
{


    <div class="col-lg-7">
        <div class="feed-item">
            <div class="row">
                <div class="col-sm-12">
                    <div class="feed-item-header">@feedback.OfferHeader</div>
                    <div class="feed-item-comment">@feedback.Comment</div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-12">
                    <hr class="feed-item-line" />
                    <div class="feed-item-info">
                        @if (feedback.Grade == Emotions.Good)
                        {
                        <i class="info-rate-line icon-smile-pos-green icon-info-rate" style="height:16px"></i>
                        }
                        else
                        {
                        <i class="info-rate-line icon-smile-neg-gray icon-info-rate" style="height:16px"></i>
                        }

                        <span class="feed-item-date">@Html.Date(feedback.DateLeft.Value)</span>
                        <span class="feed-item-leftby">Оставлен пользователем: @Html.ActionLink(feedback.SenderName, "Info", "Profile", new { userName = feedback.SenderName }, null)</span>
                    </div>
                </div>

            </div>

        </div>
    </div>
    


}
    <div class="col-lg-12">
        @Html.PagedListPager(Model.PageInfo, "SelectPage")
    </div>



