@model Trader.WEB.Models.FeedbackListViewModel
@{
    ViewBag.Title = "Negative";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-info">
                <h2>Отзывы</h2>
                <p class="lead">Здесь отображаются отзывы о вас</p>
            </div>
            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-offer-container">
                @{Html.RenderPartial("_AccountFeedbacksMenu"); }
                <table class="table table-hover">
                    <tr>
                        <th>Оценка</th>
                        <th>Предложение</th>
                        <th>Коментарий</th>
                        <th>Оставил</th>
                        <th>Дата</th>
                    </tr>
                    @foreach (var feedback in Model.Feedbacks)
            {
                <tr>
                    <td>@feedback.Grade</td>
                    <td>@feedback.OfferHeader</td>
                    <td>@feedback.Comment</td>
                    <td>@feedback.SenderName</td>

                    <td>@feedback.Date</td>
                </tr>
    }

                </table>
            </div>
        </div>

    </div>
</div>

