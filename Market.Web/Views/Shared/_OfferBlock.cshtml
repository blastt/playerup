@model IEnumerable<Market.Web.ViewModels.OfferViewModel>
<div class="col-lg-9" id="list">

    <div class="bs-component">
        <div class="row mb-3 sort">
            <div class="col-md-5 sort-counter">
                Найдено предложений: <span style="font-weight:700">@Model.Count()</span>
            </div>
            <div class="col-md-5">
                <select class="form-control" id="sort" onchange="SearchOffers();">
                    <option value="bestSeller" selected="selected">Лучшие продавцы</option>
                    <option value="priceDesc">От дорогих к дешевым</option>
                    <option value="priceAsc">От дешевых к дорогим</option>
                    <option value="newestOffer">Самые новые</option>
                </select>
                @* @Html.DropDownList("OrderBy", Model.SearchingInfo.OrderByList, new { @class = "form-control", onchange = "submitSort(value);" })*@
            </div>
            <div class="col-md-2">
                @{
                    var currencyList = new List<SelectListItem>() {
                                                                                        new SelectListItem()
                                                                                        {
                                                                                            Text = "USD",
                                                                                            Value = "USD",
                                                                                            Selected = true
                                                                                        },
                                                                                        new SelectListItem()
                                                                                        {
                                                                                            Text = "RUR",
                                                                                            Value = "RUR"
                                                                                        },
                                                                                        new SelectListItem()
                                                                                        {
                                                                                            Text = "EUR",
                                                                                            Value = "EUR"
                                                                                        }
                                                                                    };
                }

                @Html.DropDownList("currency", currencyList, new { @class = "form-control", onchange = "submitAjaxForm(1);" })
            </div>
        </div>



        <div class="row">
            @foreach (var offer in Model)
            {
                <div class="col-lg-12">
                    <div class="card mb-3">



                        <div class="card-body">
                            <div class="card-title" style="text-overflow: ellipsis">
                                @offer.Header
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="item-rating">
                                        <img class="img-circle" align="left" src="@Url.Action("Photo", "Profile" , new { UserId = offer.User.Id })" alt="Alternate Text" style="width:40px; height: 40px; margin-top:10px; margin-top:0px; margin-right:10px" />
                                        @Html.ActionLink(offer.User.Name, "Info", "Profile", new { id = offer.User.Id }, null)

                                        <br />
                                        Рейтинг <span style="font-weight:700">@offer.User.Rating</span>
                                        <br />
                                        <div class="status">
                                            @if (offer.User.IsOnline)
                                            {
                                                <span class="badge badge-pill badge-info">Online</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-pill badge-light">Offline</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-4 text-center">
                                    <div class="row">

                                        @foreach (var filter in offer.FilterFilterItem)
                                        {
                                            var url = "../../Content/Images/" + offer.Game.Value + "/Ranks/" + filter.Value.Image;
                                            <div class="col-md-6" style="margin:0 auto;">
                                                <div class="mb-3">
                                                    <span class="text-700">@filter.Key.Text</span>
                                                </div>
                                                @if (filter.Value.Image == null)
                                                {
                                                    <span>@filter.Value.Name</span>
                                                }
                                                else
                                                {
                                                    <img src="@url" title="@filter.Value.Name" style="width:100px" alt="@filter.Value.Name" />
                                                }

                                            </div>
                                        }

                                    </div>
                                </div>
                                <div class="col-sm-4 text-right">
                                    <div class="mb-2">
                                        <span id="offer_price" style="font-weight: 400; font-size: 24px">@string.Format("{0:n0}", offer.Price) руб</span>
                                    </div>
                                    <div class="mb-2">
                                        @Html.ActionLink("Подробнее", "Details", new { id = offer.Id }, new { @class = "btn btn-details" })
                                    </div>
                                    <div>
                                        @Html.ActionLink("Купить", "Details", new { id = offer.Id }, new { @class = "btn btn-buy" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">
                @*@Html.PageLinks(Model.PagingInfo)*@
            </div>
        </div>
    </div>

</div>
