@model Market.Web.ViewModels.ContactUsViewModel

@{
    ViewBag.Title = "ContactUs";
}


<div class="container">


    <div class="row">
        <div class="col-lg-12" style="align-items: center; display: flex; justify-content: center">
            <div class="col-lg-8">
                <h2>Напишите сообщение нам в поддержку</h2>
                @using (Html.BeginForm("ContactUs", "Help"))
                {
                    <div class="form-group">
                        <label class="control-label">
                            Почта
                        </label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Тема сообщения
                        </label>
                        @Html.TextBoxFor(m => m.MessageSubject, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="control-label">
                            Сообщение
                        </label>
                        @Html.TextArea("MessageBody", "", 10, 0, new { @class = "form-control", style = "resize: none" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="sendMessage" value="Отправить" class="btn btn-submit" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


