@model Market.Web.ViewModels.OrderListViewModel
@{
    ViewBag.Title = "All";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <div class="page-info">
                <h2>Заказы</h2>
                <p class="lead">Здесь отображается информация по заказам</p>
            </div>



            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-offer-container">
                @{Html.RenderPartial("_AccountOrdersMenu"); }

                
                <table class="table table-hover">
                    <tr>
                        <th>Предложение</th>
                        <th>Покупатель</th>
                        <th>Цена</th>
                        <th>Статус заказа</th>
                        <th></th>
                    </tr>
                    @foreach (var order in Model.Orders)
                    {
                        var clsBold = "";
                        if (!order.SellerChecked)
                        {
                            clsBold = "font-weight-bold warning-row";
                        }

                        <tr id="message-row-@order.Id" class="@clsBold">
                            <td class="clickable  set-viewed-td" data-id="@order.Id">
                                @if (!order.SellerChecked)
                                {
                                    <div class="set-viewed-icon"></div>

                                }
                            </td>
                            <td>@order.OfferHeader</td>
                            <td>@order.BuyerName</td>
                            <td>@order.OfferPrice</td>
                            <td>@order.OrderStatus</td>
                            <td>@Html.ActionLink("Детали", "SellDetails", "Order", new { orderId = order.Id }, null)</td>
                        </tr>
                    }

                </table>
            </div>
        </div>

    </div>
</div>
