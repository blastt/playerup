@model IEnumerable<Market.Web.ViewModels.UserProfileViewModel>

@{
    ViewBag.Title = "OfferList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped table-bordered table-light table-sm">
    <tr>
        <th>
            Имя
        </th>
        <th>
            Почта
        </th>
        <th>
            Почта подтверждена
        </th>
        <th>
            Номер телефона
        </th>
        <th>
            Номер телефона подтвержден
        </th>
        <th>
            Дата регистрации
        </th>
        <th>
            Бан
        </th>
        <th>
            Причина бана
        </th>
        <th>
            Баланс
        </th>
        <th>
            Аватар
        </th>
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(m => user.Name)
        </td>
        <td>
            @Html.DisplayFor(m => user.Email)
        </td>
        <td>
            @Html.DisplayFor(m => user.EmailConfirmed)
        </td>
        <td>
            @Html.DisplayFor(m => user.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(m => user.PhoneNumberConfirmed)
        </td>
        <td>
            @Html.DisplayFor(m => user.RegistrationDate)
        </td>
        <td>
            @Html.DisplayFor(m => user.IsBanned)
        </td>
        <td>
            @Html.DisplayFor(m => user.LockoutReason)
        </td>
        <td>
            @Html.DisplayFor(m => user.Balance)
        </td>
        <td>
            <img src="@user.Avatar48Path" width="70" alt="Alternate Text" />
        </td>
        <td class="font-size-14">
            @*@Html.ActionLink("Удалить", "DeleteUser", new { id = user.Id })*@
            @Html.ActionLink("Редактировать", "EditUser", new { id = user.Id })
            @Html.ActionLink("Заблокировать", "LockoutUserAsync", new { id = user.Id })
            @Html.ActionLink("Разблокировать", "UnlockUserAccount", new { id = user.Id })
            @Html.ActionLink("Диалоги", "Inbox", new { id = user.Id })
        </td>
    </tr>
    }
</table>

