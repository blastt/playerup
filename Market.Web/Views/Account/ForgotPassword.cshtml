@model Market.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Восстановление пароля";
}

<div class="row">
    <div class="col-lg-5 auth-box" style="float: none; margin: 0 auto">
        <div class="auth-body">

            <h3 class="text-center text-gray text-700 mb-4">Восстановление пароля</h3>
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-md", placeholder = "Почта" })

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-md", placeholder = "Пароль" })

                </div>
                <div class="form-group text-center">

                    <input type="submit" class="btn btn-submit" style="width: 50%" value="Отправить" />

                </div>
            }

        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
