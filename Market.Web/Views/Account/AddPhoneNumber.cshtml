@model Market.Web.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Привязать номер телефона";
}
<div class="row">
    <div class="col-lg-5" style="float: none; margin: 0 auto">
        <div class="phone-confirm-form text-center">
            <h3 class=" text-gray text-700 mb-4">Введите номер телефона</h3>

            @using (Html.BeginForm("AddPhoneNumber", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
        
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Number, new { @class = "form-control", placeholder = "Номер телефона" })                    
                </div>
             
                <div class="form-group">                    
                    <input type="submit" class="btn btn-submit" value="Отправить" />                    
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
