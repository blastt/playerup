
@{
    ViewBag.Title = "Настройки";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-info">
                <h2>Настройки</h2>
                <p class="lead">Здесь вы можете изменить настройки учетной записи</p>
            </div>
            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-container bg-white">

                <div class="row">
                    <div class="col-md-6">

                        <div class="account-settings-body">
                            @Html.Action("ConfirmEmailPartial")

                            @Html.Action("ConfirmPhoneNumberPartial")

                            @Html.Partial("UpdateEmail")
                            @Html.Partial("UpdatePassword")
                            @Html.Partial("UpdatePhoneNumber")
                        </div>


                    </div>
                </div>


            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


