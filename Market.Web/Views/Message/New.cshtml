@model Market.Web.ViewModels.MessageViewModel

@{

}

<div class="row">
    <div class="col-lg-12">
        <div class="page-info">
            <h2>Сообщения</h2>
            <p class="lead">Здесь отображается информация по входящим и исходящим сообщениям</p>
        </div>
        @{Html.RenderAction("AccountMenu", "Account"); }
        <div class="account-container">
            @{Html.RenderPartial("_AccountMessagesMenu"); }
            <div class="col-lg-12">
                <div class="alert alert-dismissible alert-warning">
                    <h4 class="alert-heading">Warning!</h4>
                    <p class="mb-0">In order to secure transactions on PlayerAuctions, we strictly prohibit personal contact information from being shared between members. Messages are screened for email, payment information, or instant messenging details. Thank you for your cooperation!</p>
                </div>
            </div>

            <div class="col-md-8">
                @using (Html.BeginForm("New", "Message", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Subject)
                        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @Value = (string)ViewData["OrderId"] })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.MessageBody)
                        @Html.TextAreaFor(m => m.MessageBody, new { @class = "form-control" })
                    </div>

                    <input type="submit" value="Отправить" />
                }
            </div>
        </div>


    </div>
</div>
