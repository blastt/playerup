@model Market.Web.ViewModels.OfferListViewModel
@{
    ViewBag.Title = "All";

}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-info">
                <h2>Предложения</h2>
                <p class="lead">Здесь отображается информация по предложениям</p>
            </div>
            @{Html.RenderAction("AccountMenu", "Account"); }
            <div class="account-offer-container">
                @{Html.RenderPartial("_AccountOffersMenu"); }
                <table class="table table-hover">
                    <tr>
                        <th>Игра</th>
                        <th>Заголовок</th>
                        <th>Описание</th>
                        <th>Цена</th>
                    </tr>
                    @foreach (var offer in Model.Offers)
                    {
                    <tr>
                        <td>@offer.Game.Name</td>
                        <td>@offer.Header</td>
                        <td>@offer.Discription</td>
                        <td>@offer.Price</td>
                    </tr>
                    }

                </table>
            </div>

        </div>

    </div>
</div>

